{
  "name": "sdn-controller",
  "version": "1.0.0",
  "description": "Software-Defined Networking Controller with web interface, REST APIs, WebSocket support, and authentication.",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "mocha --require ./tests/test-setup.js tests/*.js",
    "pwd-test": "pwd && mocha tests/*.js",
    "build": "babel src -d dist",
    "seed": "node seed.js"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "c8": "^10.1.2",
    "chai-http": "^4.3.0",
    "commander": "^14.0.2",
    "config": "^3.3.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-jwt": "^6.0.1",
    "express-session": "^1.18.2",
    "express-validator": "^7.3.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.3.4",
    "mysql2": "^3.15.3",
    "nodemailer": "^6.4.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "sequelize": "^6.37.7",
    "socket.io": "^4.0.5",
    "sqlite3": "^5.1.7",
    "winston": "^3.3.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "babel-cli": "^6.0.0",
    "babel-preset-es2015": "*",
    "chai": "^4.3.4",
    "mocha": "*",
    "nodemon": "^2.0.15",
    "supertest": "^6.3.4"
  },
  "author": "Your Name",
  "license": "MIT",
  "readme": "See README.md",
  "config": {
    "db": {
      "uri": "mongodb://localhost:27017/sdn_controller",
      "options": {
        "useNewUrlParser": true,
        "useUnifiedTopology": true
      }
    },
    "port": {
      "api": 3000,
      "websocket": 8080
    }
  }
}
